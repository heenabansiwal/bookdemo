<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
  		
  		<validators>
 	 		<validator type="required">
 	 	<param name="fieldname">customerid</param>
  		<message>Customer Id Is Required</message>
  		</validator>
  		
  		<validator type="requiredstring">
 	 	<param name="fieldname">orderdate</param>
  		<message>OrderDate Is Required</message>
  		</validator>
  		
  		
  		<validator type="requiredstring">
 	 	<param name="fieldname">deliveryaddress</param>
  		<message>Delivery Address Is Required</message>
  		</validator>
  		
  		
  		
  		<validator type="requiredstring">
 	 	<param name="fieldname">deliverytime</param>
  		<message>Delivery Time Is Required</message>
  		</validator>
  		
  		<validator type="long">
  		<param name="fieldname">phno</param>
  		<param name="min">100000</param>
  		<message>Phone Number must not be less than ${min} Required</message>
  		</validator>
  		
  		<validator type="requiredstring">
 	 	<param name="fieldname">modeofpayment</param>
  		<message>Mode of Payment Is Required</message>
  		</validator>
  		
  		
</validators>